{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    /* Bundler mode */
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["../shared/*"],
      "@/*": ["./src/*"]
    },
  },
  "include": ["src", "../shared"]
}
