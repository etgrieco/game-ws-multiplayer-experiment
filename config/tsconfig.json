{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "NodeNext",
    "lib": ["ES2022"],
    "target": "ES2022",
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["../shared/*"],
      "@config/*": ["../config/*"],
    },
  },
  "include": ["src", "../shared", "../config"]
}
